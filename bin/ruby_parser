#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "prism"
require "ruby_parser"

source = (ARGV[0] == "-e") ? ARGV[1] : File.read(ARGV[0] || "test.rb")
prism = Prism::Translation::RubyParser.parse(source)
ruby_parser = RubyParser.new.parse(source)

puts "Prism:"
pp prism

puts "RubyParser:"
pp ruby_parser
